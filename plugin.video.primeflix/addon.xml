<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.primeflix" name="PrimeFlix" version="1.0.0" provider-name="PrimeFlix Team">
    <requires>
        <import addon="xbmc.python" version="3.0.1" />
        <import addon="inputstream.adaptive" version="21.0.0" optional="true" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Netflix-style frontend for Amazon Prime Video</summary>
        <description lang="en_GB">
            PrimeFlix reuses an installed Amazon Prime Video backend add-on (such as Amazon VOD).
            Configure and sign in to the backend first; PrimeFlix only provides a fast, fluent
            Netflix-inspired interface and does not bypass DRM.
        </description>
        <platform>all</platform>
        <license>MIT</license>
        <source>https://github.com/PrimeFlixTeam/primeflix</source>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
