<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.primeflix" name="PrimeHub" version="2.1.0" provider-name="PrimeHub Team">
    <requires>
        <import addon="xbmc.python" version="3.0.1" />
        <import addon="inputstream.adaptive" version="21.0.0" optional="true" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Simplified launcher for Amazon Prime Video</summary>
        <description lang="en_GB">
            PrimeHub provides a clean, organized menu for accessing Amazon Prime Video content.
            Requires an installed Amazon Prime Video add-on (such as Amazon VOD).
            Configure and sign in to the Amazon addon first; PrimeHub provides a streamlined
            entry point and does not bypass DRM.
        </description>
        <platform>all</platform>
        <license>MIT</license>
        <source>https://github.com/oferchen/PrimeHub</source>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
